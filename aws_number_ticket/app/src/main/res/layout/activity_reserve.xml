<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".activity.Reserve.ReserveActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/reserve_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\????"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="년 "
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/reserve_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\??"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월 "
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/reserve_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\??"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textSize="30dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/reserve_tv_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\??"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시 "
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/reserve_tv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\??"
            android:textSize="30dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분 "
            android:textSize="30dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/reserve_btn_datepick"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorRed"
        android:text="날짜선택"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/reserve_btn_timepick"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorRed"
        android:text="시간선택"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/reserve_tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="아이디"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/reserve_tv_restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="가게이름"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/reserve_tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="위치"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/reserve_tv_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="전화번호"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/reserve_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="예약자 이름을 적어주세요"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/reserve_et_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="12"
        android:hint="예약자 연락처를 적어주세요"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/reserve_btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorRed"
        android:text="예약신청"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        />
    </LinearLayout>
</ScrollView>