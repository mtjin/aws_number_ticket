<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_brown_gradation"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:textStyle="bold"
        />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_white_radius"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <EditText
                android:id="@+id/signup_et_id"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="아이디"
                android:padding="4dp"
                />

            <Button
                android:id="@+id/signup_btn_check"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorBrown"
                android:text="아이디 중복확인"
                />

            <EditText
                android:id="@+id/signup_et_pw"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="비밀번호"
                android:padding="4dp"
                />

            <EditText
                android:id="@+id/signup_et_pwconfrim"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="비밀번호확인"
                android:padding="4dp"
                />

            <EditText
                android:id="@+id/signup_et_restaurant"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="가게이름"
                android:padding="4dp"
                />

            <EditText
                android:id="@+id/signup_et_location"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="위치"
                android:padding="4dp"
                />

            <EditText
                android:id="@+id/signup_et_tel"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:hint="연락처(가게번호)"
                android:inputType="number"
                android:maxLength="12"
                android:padding="4dp"
                />

            <Button
                android:id="@+id/signup_btn_ok"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@color/colorBrown"
                android:inputType="number"
                android:text="회원가입 완료"
                />
        </LinearLayout>

    </LinearLayout>

