<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    android:weightSum="10"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="회원가입"
        android:textColor="@color/colorWhite"
        android:textSize="30dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        >
        <EditText
        android:id="@+id/signup_et_id"
            android:padding="4dp"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:hint="아이디" />
        <Button
            android:id="@+id/signup_btn_check"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:background="@color/colorOrange"
            android:text="아이디 중복확인"/>

        <EditText
            android:id="@+id/signup_et_pw"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:hint="비밀번호" />
        <EditText
            android:id="@+id/signup_et_pwconfrim"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:hint="비밀번호확인" />
        <EditText
            android:id="@+id/signup_et_restaurant"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:hint="가게이름" />
        <EditText
            android:id="@+id/signup_et_location"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:hint="위치" />
        <EditText
            android:id="@+id/signup_et_tel"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:maxLength="12"
            android:background="@color/colorWhite"
            android:hint="연락처(가게번호)" />
        <Button
            android:id="@+id/signup_btn_ok"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:inputType="number"
            android:background="@color/colorOrange"
            android:text="회원가입 완료"/>
    </LinearLayout>


</LinearLayout>

